<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_64">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="WORDS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_24"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_below="@+id/title"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@color/black"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imgAlphabetImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="32dp"
                android:src="@drawable/alpha" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:lottie_loop="true" />

            <ImageView
                android:id="@+id/imgLottieAlternative"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/outfit"
                android:gravity="center"
                android:text="Let's \nMake \nWords"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/row_alphabet" />

    </LinearLayout>
</LinearLayout>
